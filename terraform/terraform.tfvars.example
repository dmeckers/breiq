# ====================================
# BREIQ TERRAFORM VARIABLES EXAMPLE
# Copy this file to terraform.tfvars and customize
# ====================================

# Basic Configuration
aws_region   = "us-east-1"
environment  = "production"
project_name = "breiq"
domain_name  = "breiq.online"

# Performance Settings
enable_multi_region = true

# CORS Origins for Video Access
video_bucket_cors_origins = [
  "https://breiq.online",
  "https://www.breiq.online", 
  "https://app.breiq.online",
  "https://admin.breiq.online"
]

# ====================================
# ADVANCED CONFIGURATION
# Uncomment and customize as needed
# ====================================

# Custom VPC CIDR (optional)
# vpc_cidr = "10.0.0.0/16"

# Database Configuration
