# ====================================
# BREIQ TERRAFORM CONFIGURATION
# Copy this file to terraform.tfvars and customize for your environment
# ====================================

# AWS Configuration
aws_region  = "us-east-1"
aws_profile = "breiq"           # Your personal AWS account profile
environment = "production"      # or "staging"

# Project Configuration
project_name = "breiq"
domain_name  = "breiq.online"   # Replace with your domain

# Mobile App Configuration
mobile_app_origins = [
  "https://breiq.online",
  "app://breiq",
  "https://breiq-admin.online"
]

# Database Configuration (Start Small, Scale Up)
db_instance_class         = "db.t4g.medium"    # Cost-effective start
db_backup_retention_days  = 7                  # 7 days backup
db_multi_az              = false               # Single AZ to start

# Caching Configuration
cache_node_type = "cache.t4g.micro"           # Start small
cache_num_nodes = 1                           # Single node

# ECS Configuration (Laravel API)
ecs_cpu           = 512                       # 0.5 vCPU
ecs_memory        = 1024                      # 1GB RAM
ecs_desired_count = 2                         # 2 tasks for availability
ecs_min_capacity  = 1                         # Min 1 task
ecs_max_capacity  = 10                        # Max 10 tasks

# Monitoring
enable_detailed_monitoring = true
alert_email               = "your-email@example.com"  # Replace with your email

# Security
enable_waf = true
# allowed_cidr_blocks = ["YOUR_IP/32"]  # Restrict to your IP if needed

# Optional: Additional tags
additional_tags = {
  Owner       = "YourName"
  CostCenter  = "Personal"
  Project     = "BreiqApp"
}